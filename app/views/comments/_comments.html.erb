<h3>Comments</h3>
<div class="jumbotron">
<% @post.comments.each do |comment| %>
		<p><strong><%= comment.username %></strong>:<span style="background-color: yellow;"><%=comment.body%></span></p>
		<%= link_to '[x]', [comment.post, comment],
                method: :delete,
                data:{confirm: 'are you sure?'} %></p>
<% end %>
</div>